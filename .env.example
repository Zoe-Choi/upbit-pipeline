# ============================================
# Kafka Configuration
# ============================================
KAFKA_CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk
KAFKA_BOOTSTRAP_SERVERS=localhost:29092,localhost:29093,localhost:29094
KAFKA_TOPIC_TICKER=upbit-ticker
KAFKA_TOPIC_TRADE=upbit-trade
KAFKA_TOPIC_ORDERBOOK=upbit-orderbook

# ============================================
# MinIO (S3 호환 스토리지)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET_PAIMON=paimon
MINIO_BUCKET_WAREHOUSE=warehouse

# ============================================
# ClickHouse
# ============================================
CLICKHOUSE_ADMIN_USER=admin
CLICKHOUSE_ADMIN_PASSWORD=your_clickhouse_password

# ============================================
# Upbit Markets (쉼표로 구분)
# ============================================
UPBIT_MARKETS=KRW-BTC,KRW-ETH,KRW-XRP,KRW-SOL,KRW-DOGE

# ============================================
# Grafana
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ============================================
